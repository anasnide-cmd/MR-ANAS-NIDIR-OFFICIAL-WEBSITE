rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email.matches('.*anasnidir.*') || 
        request.auth.token.email == 'anasnide@gmail.com' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
    }

    // Helper to check if user is owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper to check if user is staff (or admin)
    function isStaff() {
      return request.auth != null && (
        isAdmin() || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'staff' ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner'))
      );
    }

    // Allow authenticated users to read/write posts
    match /posts/{postId} {
      allow read: if true; // Public can read blog posts
      allow write: if isAdmin(); // Only admins can create/edit global posts
    }

    // Allow authenticated users to manage site settings
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users Collection
    match /users/{userId} {
      // Users can read their own profile, Admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Admins have full write access
      allow write: if isAdmin();
      
      // Users can create their own doc (e.g. initial setup) provided they don't set protected fields
      allow create: if isOwner(userId) && 
                    !('role' in request.resource.data) && 
                    !('siteLimit' in request.resource.data);
                    
      // Users can update their own doc provided they don't modify protected fields
      allow update: if isOwner(userId) && 
                    (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'siteLimit']));
    }

    // User Sites
    match /user_sites/{siteId} {
      allow read: if true; // Public can view
      
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.adminStatus == 'active'; // Can't create instant-banned sites
                       
      allow update: if (request.auth != null && (
        (resource.data.userId == request.auth.uid && 
         // Users CANNOT change adminStatus
         request.resource.data.adminStatus == resource.data.adminStatus &&
         // Users CANNOT update if currently banned
         resource.data.adminStatus != 'banned'
        ) || 
        isAdmin()
      )) || (
        // Allow public to increment views
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views'])
      );
      
      allow delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
    }

    // Messaging System
    match /messages/{messageId} {
      allow read: if request.auth != null && (
        resource.data.type == 'broadcast' || 
        resource.data.targetUserId == request.auth.uid ||
        isAdmin()
      );
      allow write: if isAdmin();
    }

    // System Health Logs
    match /system_logs/{logId} {
      allow create: if true; // Allow anonymous error reporting
      allow read, update, delete: if isAdmin(); // Only admins can view/manage logs
    }

    // System Config (Secure Storage for API Keys)
    match /system_config/{configId} {
      allow read, write: if isAdmin();
    }

    // Workspace Communication (Chat)
    match /workspace_chats/{chatId} {
      allow read, create: if isStaff();
      // Only admins can delete/moderate chats if needed, or maybe staff can delete their own?
      allow delete: if isAdmin(); 
      allow update: if isAdmin();
    }

    // Workspace Tasks (Kanban)
    match /workspace_tasks/{taskId} {
      allow read, write: if isStaff();
    }

    // Team Applications
    match /team_applications/{applicationId} {
      // Allow public to create (apply), but only admins/staff can read/manage
      allow create: if true;
      allow read, update, delete: if isStaff();
    }
  }
}

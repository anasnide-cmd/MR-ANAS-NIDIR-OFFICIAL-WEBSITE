rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write posts
    match /posts/{postId} {
      allow read: if true; // Public can read blog posts
      allow write: if request.auth != null; // Only logged-in users can create/edit
    }
    // Allow authenticated users to manage site settings
    match /settings/{docId} {
      allow read: if true; // Public needs to read homepage settings
      allow write: if request.auth != null; 
    }
    // Allow public read of user sites, but only owners can write
    match /user_sites/{siteId} {
      allow read: if true; // Public can view all sites
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
